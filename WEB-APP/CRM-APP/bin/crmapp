#! /bin/sh

HOME=/var/M1/WEB-APP/CRM-APP

cd $HOME

case "$1" in
start)
python $HOME/taskAgent.py start
uwsgi -x $HOME/bin/http-config.xml
;;

stop)
python $HOME/taskAgent.py start
uwsgi --stop /tmp/crm-http.pid
;;

restart)
echo Stoping service
python $HOME/taskAgent.py start
uwsgi --stop /tmp/crm-http.pid

sleep 3
python $HOME/taskAgent.py start
uwsgi -x $HOME/bin/http-config.xml
;;

*)
echo "Usage:$0{start|stop|status}"
;;
esac

exit 0